<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forums</title>
</head>
<body>
 <div>
    <ul>
      <% for (const convo of conversations) { %>
      <li>
         <a href="/thread/<%- convo.uid %>"><%- convo.title %></a>
      </li>
      <% } %>
    </ul>
 </div>

<div>
   <form name="myForm" action="/conversations" onsubmit="return validateForm()" method="post">
      <label for="fname">Conversation Name: </label>
      <input type="text" name="fname">
      <input type="submit" value="Submit">
      </form>
</div>
    <script> 

      function validateForm() {
  let x = document.forms["myForm"]["fname"].value;
  if (x == "") {
    alert("Name must be filled out");
    return false;
  }
}
    </script>
</body>
</html>
